<h4>New Animal Form</h4>
<form action="/animals/banana" method="POST">
  <label for="name">Name:
    <input type="text" id="name" name="animalName">
  </label>

  <label for="type">Type:
    <input type="text" id="type" name="animalType">
  </label>

  <input type="submit" value="Add Animal">
</form> 

<ul>
  {{#each animalsArray }}
    <li>{{ this.name }}, {{ this.type }}</li>
  {{/each}}
</ul>